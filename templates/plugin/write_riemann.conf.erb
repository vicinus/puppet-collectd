<Plugin "write_riemann">
  <Node "default">
    Host "<%= @riemann_host  %>"
    Port "<%= @riemann_port  %>"
    Protocol <%= @protocol %>
    Batch <%= @batch %>
    StoreRates <%= @store_rates %>
    AlwaysAppendDS <%= @always_append_ds %>
    TTLFactor <%= @ttl_factor %>
    CheckThresholds <%= @check_thresholds %>
  </Node>
<% @tags.each do |t| -%>
  Tag "<%= t %>"
<% end -%>
<% @attributes.each do |k, v| -%>
  Attribute "<%= k %>" "<%= v %>"
<% end -%>
</Plugin>
